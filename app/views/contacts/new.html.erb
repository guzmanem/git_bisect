<%= form_with url: contacts_path, local: true do |f| %>
  <p>
    <%= f.label :email,  "Email" %><br>
    <%= f.email_field :email, required: true %>
  </p>

  <p>
    <%= f.label :message, "Mensaje" %><br>
    <%= f.text_area :message, rows: 4, required: true %>
