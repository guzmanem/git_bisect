<div class="row justify-content-center">
  <div class="col-lg-8">
    <div class="card shadow-lg border-0">
      <div class="card-header bg-gradient text-white" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
        <div class="d-flex justify-content-between align-items-center">
          <div>
            <h3 class="mb-0">
              <i class="fas fa-user me-2"></i>
              <%= @user.name %>
            </h3>
            <p class="mb-0 opacity-75">Perfil de usuario - ID: <%= @user.id %></p>
          </div>
          <div class="avatar bg-white text-primary rounded-circle d-flex align-items-center justify-content-center" 
               style="width: 60px; height: 60px; font-size: 24px;">
            <i class="fas fa-user"></i>
          </div>
        </div>
      </div>

      <div class="card-body p-4">
        <div class="row">
          <div class="col-md-6 mb-4">
            <h6 class="text-muted text-uppercase fw-bold mb-2">
              <i class="fas fa-envelope me-2"></i>Email
            </h6>
            <p class="fs-5">
              <a href="mailto:<%= @user.email %>" class="text-decoration-none">
                <%= @user.email %>
              </a>
            </p>
          </div>

          <div class="col-md-6 mb-4">
            <h6 class="text-muted text-uppercase fw-bold mb-2">
              <i class="fas fa-phone me-2"></i>Teléfono
            </h6>
            <p class="fs-5">
              <% if @user.phone.present? %>
                <a href="tel:<%= @user.phone %>" class="text-decoration-none">
                  <%= @user.phone %>
                </a>
              <% else %>
                <span class="text-muted">No especificado</span>
              <% end %>
            </p>
          </div>
        </div>

        <div class="row">
          <div class="col-md-6 mb-4">
            <h6 class="text-muted text-uppercase fw-bold mb-2">
              <i class="fas fa-map-marker-alt me-2"></i>Ciudad
            </h6>
            <p class="fs-5">
              <% if @user.city.present? %>
                <%= @user.city %>
              <% else %>
                <span class="text-muted">No especificada</span>
              <% end %>
            </p>
          </div>

          <div class="col-md-6 mb-4">
            <h6 class="text-muted text-uppercase fw-bold mb-2">
              <i class="fas fa-user-tag me-2"></i>Rol
            </h6>
            <p class="fs-5">
              <span class="badge bg-<%= case @user.role
                                     when 'admin' then 'danger'
                                     when 'moderator' then 'warning'
                                     else 'secondary'
                                     end %> fs-6 px-3 py-2">
                <i class="fas fa-<%= case @user.role
                                  when 'admin' then 'crown'
                                  when 'moderator' then 'user-shield'
                                  else 'user'
                                  end %> me-2"></i>
                <%= @user.role.capitalize %>
              </span>
            </p>
          </div>
        </div>

        <div class="row">
          <div class="col-md-6 mb-4">
            <h6 class="text-muted text-uppercase fw-bold mb-2">
              <i class="fas fa-toggle-on me-2"></i>Estado
            </h6>
            <p class="fs-5">
              <span class="badge bg-<%= @user.active? ? 'success' : 'secondary' %> fs-6 px-3 py-2">
                <i class="fas fa-<%= @user.active? ? 'check-circle' : 'times-circle' %> me-2"></i>
                <%= @user.active? ? 'Activo' : 'Inactivo' %>
              </span>
            </p>
          </div>

          <div class="col-md-6 mb-4">
            <h6 class="text-muted text-uppercase fw-bold mb-2">
              <i class="fas fa-calendar me-2"></i>Fecha de Creación
            </h6>
            <p class="fs-5">
              <%= @user.created_at.strftime("%d de %B, %Y") if @user.created_at %>
            </p>
          </div>
        </div>

        <!-- Actions -->
        <div class="border-top pt-4 mt-4">
          <div class="d-flex justify-content-between">
            <%= link_to users_path, class: "btn btn-outline-secondary btn-lg" do %>
              <i class="fas fa-arrow-left me-2"></i>
              Volver a la Lista
            <% end %>

            <div class="btn-group">
              <%= link_to edit_user_path(@user), class: "btn btn-warning btn-lg" do %>
                <i class="fas fa-edit me-2"></i>
                Editar
              <% end %>

              <%= link_to user_path(@user), method: :delete, 
                  confirm: "¿Estás seguro de eliminar a #{@user.name}?",
                  class: "btn btn-danger btn-lg" do %>
                <i class="fas fa-trash me-2"></i>
                Eliminar
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
